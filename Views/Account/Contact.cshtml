@model BookSharing.Models.ViewModels.CreateContactViewModel

@{
    ViewBag.Title = "Contact Administration";
}
<div class="bg-white" style="border-radius: 20px;">
    <div style="padding: 20px 40px 20px 40px;">
        <h1>Contact Administration</h1>

        <div class="row">
            <div class="col-md-6">
                <form asp-action="Contact" asp-controller="Account" method="POST">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <input asp-for="Email" value="@Model.Email" type="hidden"/>
                    <div class="form-group">
                        <label asp-for="FullName" class="control-label"></label>
                        <input asp-for="FullName" class="form-control" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Message" class="control-label"></label>
                        <textarea asp-for="Message" class="form-control"></textarea>
                        <span asp-validation-for="Message" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-primary">Send</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}