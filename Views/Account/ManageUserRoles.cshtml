@model List<BookSharing.Models.ViewModels.ManageUserRolesViewModel>

@{
    ViewData["Title"] = "Manage User Roles";
    Layout = "_Layout";
}
<div class="bg-white" style="border-radius: 20px;">
    <div style="padding: 20px 40px 20px 40px;">
        <h1>Manage Roles</h1>
        <h2>@ViewBag.UserName</h2>
        <hr />
        <div class="row">
            <div class="col-md-6">
                <form asp-action="ManageUsersRoles" asp-controller="Account" method="POST">
                    <input type="hidden" value="@ViewBag.UserId" name="Id">

                    <div class="form-group">
                        <table class="table table-hover">
                            <thead class="thead-dark">
                                <tr>
                                    <th scope="col">Role Id</th>
                                    <th scope="col">Role Name</th>
                                    <th scope="col"></th>
                                </tr>
                            </thead>
                            @for (int i = 0; i < Model.Count(); i++)
                            {
                                <tbody>
                                    <tr>
                                        <th scope="row">@Model[i].RoleId</th>
                                        <td>@Model[i].RoleName</td>
                                        <input type="hidden" asp-for="@Model[i].RoleId" value="@Model[i].RoleId">
                                        <input asp-for="@Model[i].RoleName" value="@Model[i].RoleName" readonly hidden>

                                        @{
                                            if (Model[i].IsSelected)
                                            {
                                                <td><input type="checkbox" asp-for="@Model[i].IsSelected" class="form-check-input" checked></td>
                                            }
                                            else
                                            {
                                                <td><input type="checkbox" asp-for="@Model[i].IsSelected" class="form-check-input"></td>
                                            }
                                        }
                                    </tr>
                                </tbody>
                            }
                        </table>
                    </div>
                    <button type="submit" class="btn btn-primary">Update</button>
                    <a asp-action="ListAllUsers" asp-controller="Account" class="btn btn-secondary">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>
