@model IEnumerable<BookSharing.Models.Book>

@{
    ViewBag.Title = "Books";
}
<div class="bg-white" style="border-radius: 20px;">
    <div style="padding: 20px 40px 20px 40px;">
@if (TempData["CreateSuccess"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["CreateSuccess"]
    </div>
}
@if (TempData["DeleteSuccess"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["DeleteSuccess"]
    </div>
}

<h1>Books for Sharing</h1>
<div class="col-8 ml-200">
    <a class="btn btn-primary mb-2 mt-2 w-25 p-2 d-flex justify-content-center" asp-action="CreateBook"
        asp-controller="Book">Add New Book</a>
</div>

<div class="container">
    <div class="row">
    @if (Model.Any())
    {
        @foreach (var item in Model)
        {
            <div class="col col-md-auto mt-4" style="border-radius: 10px;">
                    <div class="card h-100">
                        <img class="card-img-top" src="~/images/@item.PhotoPath" alt="Book image" style="width:100%">
                            <h4 class="card-title"><b><u>Name</u>: </b>@item.BookName</h4>
                            <p class="card-body p-0"><b>Author: </b> @item.Author</p>
                            <p class="card-text"><b>Description: </b>@item.BookDescription</p>
                            <div class="d-flex justify-content-between">
                                <p class="card-subtitle mb-2 ml-5 text-muted"><b>Catergory:</b> @item.genero</p>
                                <p class="card-subtitle mb-2 mr-5 text-muted"><b>Language:</b> @item.idioma</p>
                            </div>
                            <div class="d-flex bd-highlight">
                                <a asp-action="Edit" asp-controller="Book" class="btn btn-primary p-2 flex-fill bd-highlight"
                                asp-route-id="@item.BookId">Edit</a>
                                <a asp-action="Delete" asp-controller="Book" class="btn btn-danger p-2 flex-fill bd-highlight"
                                asp-route-id="@item.BookId">Delete</a>

                            </div>
                    </div>
            </div>
        }
    }
    else
    {
        <div class="alert alert-danger col-md-12 text-center" role="alert">
            <h4>You dont have any Books to share!</h4>
        </div>
    }
        </div>

</div>
</div>
</div>
