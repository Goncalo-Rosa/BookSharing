@model Microsoft.AspNetCore.Identity.IdentityRole;

@{
    ViewBag.Title = "Delete Role";
}
<div class="bg-white" style="border-radius: 20px;">
    <div style="padding: 20px 40px 20px 40px;">
        <h1>Delete Role</h1>

        <div class="row">
            <div class="col-md-6">
                <div>
                    <dl>
                        <dt>Role Id</dt>
                        <dl>@Model.Id</dl>

                        <dt>Role Name</dt>
                        <dl>@Model.Name</dl>
                    </dl>
                </div>

                <div>
                    <form asp-action="DeleteRole" asp-controller="Role" method="POST">
                        <button class="btn btn-danger" type="submit">Delete</button>
                        <a asp-action="Index" asp-asp-controller="Role" class="btn btn-secondary">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
